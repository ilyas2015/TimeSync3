<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Work Space</title>
    @Styles.Render("~/Content/ej/web/bootstrap-theme/ej.web.all.min.css")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css-marvel")
    @Scripts.Render("~/bundles/modernizr")
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ejscripts")

    <script type="text/javascript" src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
   
    @*@Scripts.Render("~/Scripts/jquery-3.1.1.min.js")*@
	
   
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                @Html.ActionLink("Timesheet", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @Html.Partial("_LoginPartialMarvel")
        </nav>
        <nav class="navbar-default navbar-side" role="navigation" style="left:0px;">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Timesheet")"><i class='fa fa-table'></i>My Timesheets</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Template")"><i class='fa fa-qrcode'></i>My Templates</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Document")"><i class='fa fa-cloud-upload'></i>Document Management</a>
                        </li>
                    }
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"><i class='fa fa-desktop'></i>Administration</a>
                        </li>
                    }
                </ul>
            </div>

        </nav>
        <div id="page-wrapper" style="margin-left: 260px;">
            <div class="page-header">
                @RenderSection("page_header", required: false)
            </div>
            <div id="page-inner">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Timesheet Management</p>
                </footer>
            </div>
        </div>
    </div>

    
    @Scripts.Render("~/Scripts/jsrender.min.js")
    

    @RenderSection("scripts", required: false)
    @Html.EJ().ScriptManager()
</body>
</html>
